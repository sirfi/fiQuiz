@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<h1>Kullanıcılar</h1>

<div class="table-responsive">
    <table class="table table-last-small-column">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="İşlemler">
                        <a asp-action="Roles" asp-route-id="@item.Id" class="btn btn-primary">Roller</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>