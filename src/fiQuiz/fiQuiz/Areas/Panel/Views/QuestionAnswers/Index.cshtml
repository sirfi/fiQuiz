@model IEnumerable<fiQuiz.Models.QuestionAnswer>

@{
    ViewData["Title"] = "Soru Cevapları";
}

<h1>Soru Cevapları</h1>

<div class="row">
    <div class="col-md-6"><partial name="_Question" model="@ViewData["Question"]" /></div>
    <div class="col-md-6"><partial name="_CreateFast" model="@(new QuestionAnswer{QuestionId = ViewBag.Question.Id})" /></div>
</div>

<p>
    <a asp-action="Create" asp-route-questionId="@ViewBag.Question.Id" class="btn btn-primary">Yeni Oluştur</a>
</p>
<div class="table-responsive">
    <table class="table table-last-small-column">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Answer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCorrect)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Answer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCorrect)
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="İşlemler">
                            <partial name="_TrackDetails" model="@item" />
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>